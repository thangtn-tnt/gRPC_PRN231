@model gRPC.Protos.ProductResponse;

<table class="table">
    <thead>
        <tr>
            <th>
                Product
            </th>
            <th>
                Category
            </th>
            <th>
                Price
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.ProductName</td>
            <td>@Model.CategoryName</td>
            <td>@Model.Price</td>            
            <td>
                <a asp-controller="Product" asp-action="Update" asp-route-id="@Model.Id" class="btn btn-success"><i class="bi bi-pencil-square"></i></a>
                <a asp-controller="Product" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger"><i class="bi bi-trash-fill"></i></a>            
            </td>
        </tr>
    </tbody>
</table>